/* pages/join/join.wxss */
page{
	width: 100%;
	height: 100%;
}
#page{
	width: 100%;
	height: 100%;
}
#background{
	width: 100%;
	height: 100%;
}
#background image{
	width: 100%;
	height: 100%;
}


#page .items{
	width: 100%;
	height: 100%;
	background: rgba(38,77,106,0.5);
	position: fixed;
	top: 0;
	left: 0;
}
#page .items .item{
	width: 70%;
	height: 10%;
	background: rgba(49,49,49,0.7);
	border-bottom-right-radius: 20px;
	border-top-right-radius: 20px;
	margin-top: 30px;
	display: flex;
	align-items: center;
	justify-content: center;
	color:#fff;
}