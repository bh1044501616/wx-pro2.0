<scroll-view scroll-x scroll-with-animation id="scrollNavi">
	<view class="{{selectedItem==0?'selected-item':'item'}}" bindtap="turnNavi" data-url="recommand" data-id="0">
		推荐
	</view>
	<view class="{{selectedItem==1?'selected-item':'item'}}" bindtap="turnNavi" data-url="zllm" data-id="1">
		智联联盟
	</view>
	<view class="{{selectedItem==2?'selected-item':'item'}}" bindtap="turnNavi" data-url="tid" data-id="2">
		Tid大会
	</view>
</scroll-view>
<scroll-view scroll-x scroll-with-animation id="scrollNavi0"></scroll-view>

<view id="serverInfo" style="display: {{serverInfo===''?'none':'block'}};">
	<icon type="info" size="50"></icon>
	<view>
		{{serverInfo}}
	</view>
</view>

<view id="infoBox" style="display: {{serverInfo===''?'block':'none'}};">
	<block wx:for="{{items}}">
		<view class="item-box">
			<view class="lefty">
				<view class="theme-box" data-url="{{item.detailUrl}}" bindtap="showDetail" data-id="{{item.id}}" bindtouchstart="doWatch">
					{{item.theme}}
				</view>
				<view class="info-box">
					<view class="date">
						{{item.time}}
					</view>
					<view class="watch">
						<view class="image-box">
							<image src="images/watch.png"/>
						</view>
						{{item.watch}}
					</view>
					<view class="praise">
						<view class="image-box" data-id="{{item.id}}" animation="{{praiseAnimation[index]}}" data-index="{{index}}" bindtap="doPraise">
							<image src="images/{{praiseIcon[index]}}.png"/>
						</view>
						{{item.praise}}
					</view>
				</view>
			</view>
			<view class="righty">
				<image src="{{item.cover}}" mode="scaleToFill"/>
			</view>
		</view>
	</block>
	<view id="newsNumTip" style="display: {{newsNumTip}}">
		没有更多了...
	</view>
</view>

