/* pages/schedule/schedule.wxss */
page{
	width: 100%;
	height: 100%;
	margin: 0;
	padding: 0;
}

#scrollNavi{
	width: 100%;
	height: 88rpx;
	white-space: nowrap; 
	box-shadow: 0px 0px 5px 1px #aaa;
}
#scrollNavi .item{
	width: 30%;
	height: 85rpx;
	line-height: 85rpx;
	vertical-align: center;
	text-align: center;
	display: inline-block;
	color:#aaa;
	font-weight: lighter;
}
#scrollNavi .selected-item{
	color:#000;
	font-weight: normal;
	border-bottom:5px solid #000;
}
/*导航定位*/
#scrollNavi{
	position: fixed;
	top: 0;
	left: 0;
	background: #fff;
	z-index: 5;
}
#scrollNavi0{
	width: 100%;
	height: 88rpx;
	display: inline-block;
	white-space: nowrap; 
	box-shadow: 0px 0px 5px 1px #aaa;
	z-index: 1;
}

/*网络出错提示*/
#serverInfo{
	width:100%;
	margin: auto;
	text-align: center;
	margin-top: 50px;
}

/*Contents*/
#contents{
	width: 100%;
	height: 100%;
}
#contents .content{
	width: 100%;
	/*border-bottom: 0.5px solid #aaa;*/
}
/*多种样式*/
#contents .content .title{
	display: flex;
	width: 100%;
	height: 50rpx;
	padding-top: 20rpx;
}
#contents .content .domain{
	font-size: 20px;
	width: 50%;
	color:#555;
	padding-left: 10rpx;
}
#contents .content .detail{
	width: 100%;
	display: flex;
	flex-direction: row;
	margin-top: 2px;
	width: 45%;
	color:#777;
}
#contents .content .icon{
	height: 50rpx;
	width: 5%;
}
#contents .content .icon image{
	height: 100%;
	width: 100%;
}
#contents .content .detail .loc{
	padding-left: 20px;
}
#contents .content .topics{
	margin-top: 10px;
}
#contents .style-0{
	background: #f0f0f0;
}
#contents .style-1{
	background: #f5f5f5;
}
#contents .content .topics .topic_box{
	width: 100%;
	font-size: 13px;
	padding-top: 20rpx;
	padding-bottom: 20rpx;
}
#contents .content .topics .topic_box .time-box{
	display: flex;
	margin-left: 100rpx;
}
#contents .content .topics .topic_box .icon{
	width: 40rpx;
	height: 40rpx;
}
#contents .content .topics .topic_box .icon image{
	width: 100%;
	height: 100%;
}
#contents .content .topics .topic_box .time{
	color:#aaa;
}
#contents .content .topics .topic_box .topic{
	display: block;
	margin-left: 100rpx;
	color:#777;
}


#detail{
	width: 100%;
	height: 100%;
	position: fixed;
	left: 0;
	top: -100%;
	z-index: 99;
	background: rgba(0,0,0,0.5);
}
#detail .detail-box{
	width: 90%;
	height: 92%;
	margin: auto;
	margin-top: 40rpx;
	background: #fff;
	border-radius: 5px;
}
#detail .detail{
	display: flex;
}
#detail .detail .loc{
	padding-left: 40rpx;
}
#detail .topics .info-box{
	/*display: flex;*/
	font-size: 14px;
	color:#333;
}
#detail .topics .lecture{
	margin-top: 20rpx;
}
#detail .topics .lecture .top-box{
	display: flex;
}
#detail .topics .lecture .top-box .right-box{
	width: 70%;
	color:#777;
}
#detail .topics .lecture .top-box .right-box view{
	height: 50%;
	display: flex;
	align-items: center;
}
#detail .topics .lecture .top-box .right-box .intro{
	font-size: 30rpx;
}
#detail .topics .lecture .top-box .right-box .name{
	color:#777;
}
#detail .topics .lecture .top-box .left-box{
	width: 125rpx;
	height: 125rpx;
}
#detail .topics .lecture .top-box .left-box image{
	width: 100%;
	height: 100%;
}
#detail .topics .lecture .bottom-box{
	display: flex;
	color:#999;
	font-size: 35rpx;
}
#detail .topics .lecture .bottom-box .ppt{
	width: 500rpx;
	display: flex;
	align-items: center;
}
#detail .topics .lecture .bottom-box .icon{
	width: 70rpx;
	height: 70rpx;
}
#detail .topics .lecture .bottom-box image{
	width: 100%;
	height: 100%;
}

/*图片logo的样式*/
#detail .detail-box .line{
	width: 90%;
	float: right;
}
#detail .detail-box .domain{
	position: relative;
	padding-left: 100rpx;
	border-left: 1px solid #7cc9c2;
	font-size: 50rpx;
}
#detail .detail-box .detail{
	padding-left: 100rpx;
	border-left: 1px solid #7cc9c2;
	color:#888;
}
#detail .detail-box .domain .logo{
	position: absolute;
	width: 200rpx;
	height: 200rpx;
	top: -100rpx;
	left: -100rpx;
}
#detail .detail-box .topics{
	
}
#detail .detail-box .topics .topic-box{
	position: relative;
	padding-left: 150rpx;
	border-left: 1px solid #7cc9c2;
	margin-top: 50rpx;
}
#detail .detail-box .topics .last{
	border:0;
}
#detail .detail-box .topics .topic-box .logo{
	position: absolute;
	width: 100rpx;
	height: 100rpx;
	top: -50rpx;
	left: -50rpx;
}
.logo image{
	width: 100%;
	height: 100%;
}


/**返回列表提示*/
#returnTip{
	position: fixed;
	z-index: 100;
	width: 100%;
	height: 100%;
	top: 0;
	left: 0;
	display: flex;
	align-items: center;
	justify-content: center;
	background: rgba(0,0,0,0.7);
}
#returnTip view{
	font-size: 60rpx;
	color:#fff;
	font-weight:100; 
}
#returnTip .iconTip{
	width: 30rpx;
	height:30rpx;
	border-right: 2px solid #777;
	border-bottom: 2px solid #777;
	transform: rotateZ(-45deg);
	margin-left: 40rpx;
}
#returnTip .highLight{
	border-right: 2px solid #fff;
	border-bottom: 2px solid #fff;
}