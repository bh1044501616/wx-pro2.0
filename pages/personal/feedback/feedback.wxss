/* pages/join/feedback.wxss */
page{
	width: 100%;
	height: 100%;
}
#page{
	width: 100%;
	height: 100%;
}
#background{
	width: 100%;
	height: 100%;
}
#background image{
	width: 100%;
	height: 100%;
}

#page #form{
	width: 100%;
	height: 100%;
	background: rgba(38,77,106,0.5);
	position: fixed;
	top: 0;
	left: 0;
}
#page #form textarea{
	width: 90%;
	height: 40%;
	margin: auto;
	margin-top: 15px;
	background: rgba(38,77,106,0.3);
	padding-top: 5px;
	padding-left: 5px;
	padding-right: 5px;
	font-size: 15px;
	color: #fff;
	border-radius: 5px;
}
#page #form input{
	width: 90%;
	height: 5%;
	margin: auto;
	margin-top: 15px;
	background: rgba(38,77,106,0.3);
	padding-top: 5px;
	padding-left: 5px;
	padding-right: 5px;
	font-size: 15px;
	color: #fff;
	border-radius: 5px;
}
#page #form button{
	width: 90%;
	height: 9%;
	margin: auto;
	margin-top: 20px;
	background: rgb(38,77,106);
}



#page #info{
	width: 100%;
	height: 100%;
	background: rgba(38,77,106,0.8);
	position: fixed;
	top: 0;
	left: 0;
	text-align: center;
}
#page #info icon{
	margin-top: 20px;
}
#page #info view{
	margin: auto;
	margin-top: 10px;
	color:#eee;
	text-align: center;
}