/* pages/personal/personal.wxss */
page{
	width: 100%;
	height: 100%;
	margin: 0;
	padding: 0;
	background: #eee;
}
#userInfo{
	width: 100%;
	height: 180rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	background: #fff;
}
#userInfo .pic,.qrcode{
	width: 130rpx;
	height: 130rpx;
}
#userInfo .pic open-data{
	width: 100%;
	height: 100%;
	border-radius: 50%;
}
#userInfo .qrcode image{
	width: 100%;
	height: 100%;
}
#userInfo .info{
	width: 440rpx;
	height: 140rpx;
}
#userInfo .info view{
	width: 100%;
	height: 50%;
	padding-left: 20rpx;
	margin-left: 20rpx;
}
#userInfo .info .company{
	width:80%;
	font-size: 30rpx;
	border-top: 0.5px solid #eee;
	display: flex;
	align-items: center;
	color:#aaa;
}


.box{
	width: 100%;
	background: #fff;
}
.box .item{
	width:95%;
	height: 90rpx;
	display: flex;
	align-items: center;
	padding-left: 10rpx;
	margin: auto;
	border-top: 0.5px solid #eee;
}
.box .item .icon{
	width: 70rpx;
	height: 70rpx;
}
.box .item .icon image{
	width: 100%;
	height: 100%;
}
.box .item .text{
	margin-left: 20rpx;
	font-size: 35rpx;
}

.box{
	margin-top: 50rpx; 
}
.pressed-item{
	background: #ccc;
}

.box .item-box{
	width: 100%;
}


#model{
	display: flex;
	align-items: center;
	justify-content: center;
}
#model .model-box{
	width: 80%;
	background: #fff;
	border-radius: 2px;
	margin: auto;
}
#model .model-box .logo{
	width: 300rpx;
	height: 100rpx;
	margin-bottom: 20rpx;
}
#model .model-box .logo image{
	width: 100%;
	height: 100%;
}
#model .model-box .top{
	border-bottom: 1px solid #eee;
	padding: 40rpx;
	margin-bottom: 20rpx;
}
#model .model-box .middle{
	margin: auto;
	text-align: center;
	font-size: 30rpx;
	width: 90%;
}
#model .model-box .bottom{
	display: flex;
	width: 100%;
	height: 100rpx;
	align-items: center;
	margin-top: 20rpx;
}
#model .model-box .bottom view{
	width: 50%;
	display: flex;
	align-items: center;
	justify-content: center;
}
#model .model-box .bottom .decline{
	border-right: 1px solid #eee;
}
#model .model-box .bottom .selected{
	background: #eee;
	height: 100%;
}
#model .model-box .bottom button{
	width: 150rpx;
	height: 70rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	font-size: 35rpx;
	border-radius: 0;
	border:0;
	background: #fff;

	width: 0;
	height: 0;
	padding: 0;
	margin:0;
}
#model .model-box .bottom button::after{
	border-radius: 0;
	border:0;
}


/*点击之后的二维码*/
#qrcode{
	display: flex;
	align-items: center;
	justify-content: center;
}
#qrcode view{
	width: 600rpx;
	height: 600rpx;
}
#qrcode view image{
	width: 100%;
	height: 100%;
}

/*模态框占用整个屏幕的样式*/
.model{
	width: 100%;
	height: 100%;
	position: fixed;
	top: 0;
	left: 0;
	background: rgba(0,0,0,0.3);
}

/*检测过的二维码数据列表样式*/
#checkList{
	color:#fff;
}
#checkList .item-box{
	border-bottom: 1px solid #ccc;
}