/* pages/personal/myticket/myticket.wxss */
page{
	width: 100%;
	height: 100%;
	margin: auto;
}
.logo{
	width: 100%;
	background: #e5e5e5;
	padding: 20rpx;
}
.logo image{
	width: 50%;
}

#ticket{
	width: 90%;
	margin: auto;
	margin-top: 20rpx;
}
#ticket .item{
	width: 100%;
	display: flex;
	align-items: center;
	height: 100rpx;
	padding-left:20rpx; 
	border-bottom: 0.5px solid #e5e5e5;
}
#ticket .qrcode{
	width: 100%;
	margin: auto;
	margin-top: 40rpx;
	text-align: center;
}
#ticket .qrcode image{
	width: 500rpx;
	height: 500rpx;
}
#ticket .qrcode .freshPage{
	background: #ffb54c;
	color:#fff;
	width: 180rpx;
	margin: auto;
	margin-top: 20rpx;
	font-size: 35rpx;
}
#ticket .qrcode .pay{
	width: 200rpx;
	height: 70rpx;
	background: #51c332;
	color:#fff;
	display: flex;
	align-items: center;
	justify-content: center;
	margin: auto;
	margin-top: 20rpx; 
}
#ticket .tip text{
	text-align: left;
	font-size: 31rpx;
	margin-bottom: 20rpx;
}

#payMent{
	width: 100%;
	height: 100%;
	position: fixed;
	top: 0;
	left: 0;
	background: rgba(0,0,0,0.5);
	color:#fff;
	font-size: 35rpx;
	display: flex;
	align-items: center;
	justify-content: center;
}
#payMent .item-box{
	width: 100%;
	margin-bottom: 40rpx;
}
#payMent .item-box image{
	width: 150rpx;
	height: 150rpx;
}
#payMent .item-box text{
	height: 150rpx;
}