/*content独立样式*/
#contents{
	width: 100%;
	height: 90%;
	white-space: nowrap;
	display: flex;
	align-items: center;
}
#contents .content-box{
	width: 80%;
	height: 90%;
	display: inline-block;
	padding-left: 7%;
}
#contents .content-box .content{
	width: 100%;
	height: 100%;
	box-shadow: 0px 0px 5px 1px #777;
}
#contents .content-box .content .title{
	left: 0;
}
#contents .content-box .content .detail{
	display: flex;
	justify-content: center;
	align-items: center;
}
#contents .content-box .content .detail .text{
	width: 60%;
	height: 60%;
	/*view中的中文自动换行*/
	white-space: pre-line;
	flex-wrap: wrap;
	background: rgba(0,0,0,0.5);
	padding: 20rpx;
}
#contents .content-box .content .arrow{
	width: 115rpx;
	height: 115rpx;
	border: 2px solid rgba(255,255,255,0.5);
	border-radius: 50%;
	position: absolute;
	right: 20rpx;
	bottom: 20rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	font-size: 100rpx;
	font-weight: lighter;
	color:rgba(255,255,255,0.5);
}
#contents #content-box-9{
	margin-right: 5%;
}




/*content_navi*/
#contents_navi{
	width: 100%;
	height: 8%;
	display: inline-block;
	white-space: nowrap;
	box-shadow: 0px 0px 5px 1px #aaa;
}
#contents_navi .content{
	width: 30%;
	height: 100%;
	display: inline-block;
}
#contents_navi .content .text-box{
	width: 100%;
	height: 95%;
	color:#777;
	font-weight: lighter;
	display: flex;
	align-items: center;
	justify-content: center;
}
#contents_navi .content .selected-content{
	color:#000;
	font-weight: normal;
	border-bottom:5px solid #000;
}
#contents_navi .content0{
