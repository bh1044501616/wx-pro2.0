/** 页尾*/
#pageFooter{
	width: 100%;
	background-color: #333;
	color: #999;
	margin-top: 30px;
}
#pageFooter .body{
	border-bottom: 0.5px solid #888;
	width: 90%;
	margin: auto;
	display: flex;
	flex-direction: row;
}
#pageFooter .body .title{
	font-size: 15px;
	color: #fff;
	line-height: 40px;
	width: 50%;
}
#pageFooter .body .content{
	display: flex;
	flex-direction: row-reverse;
	font-size: 11px;
	line-height: 40px;
	width: 50%;
}
#pageFooter .body .content view{
	text-align: right;
	padding-left: 5px;
}
#pageFooter .rights{
	width: 90%;
	line-height: 40px;
	margin: auto;
	font-size: 12px;
}


