/*contents样式*/
#contents{
	width: 100%;
	margin: auto;
}
#contents .content-box{
	perspective: 5000px;
	margin-top: 50rpx;
}
#contents .content{
	position: relative;
	color:#fff;
	height: 350rpx;
	width: 100%;
}
#contents .content image{
	width: 100%;
	height: 100%;
	z-index: 9;
}
#contents .content .detail{
	position: absolute;
	z-index: 10;
	right: 0;
}
#contents .content .title{
	position: absolute;
	z-index: 10;
	right: 0;
}

#contents_navi{
	position: fixed;
	top: 0;
	left: 0;
}
#contents_navi .content_navi{
	width: 120rpx;
	height: 50rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	color:#000;
	font-size: 30rpx;
	background: rgba(255,255,255,0.5);
}
#contents_navi .selected{
	background:red;
}